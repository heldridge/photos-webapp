{% extends 'base.html.j2' %}

{% load static %}

{% block content %}

<div class="flex flex-col items-center my-10">

    <div class="flex justify-between w-full max-w-7xl px-10">
        <div class="w-2/12 border-2 border-default rounded px-5 flex flex-col py-3">
            <h1 class="text-3xl text-primary">Tags!</h1>
        </div>
        <div class="w-9/12">
            <div class="flex flex-wrap">
                {% for tag in tags %}
                <a href="{% url 'search' %}?tags={{ tag.title }}" class="tag bg-gray-300 hover:bg-gray-400 rounded py-2 px-3 text mr-5 font-medium text-lg mb-5 bg-tag hover:bg-tag-hover text-tag hover:text-tag-hover">
                    <span class="opacity-medium-emphasis">{{ tag.title }}: {{ tag.count }}</span>
                </a>
                {% endfor %}
            </div>

        </div>
    </div>
</div>

<script type="text/javascript" src="{% static 'js/basic.js' %}"></script>
{% endblock %}