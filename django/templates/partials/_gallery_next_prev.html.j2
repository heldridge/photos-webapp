<a 
    class="hidden bg-gray-300 hover:bg-gray-500 rounded-b py-2 pl-4 pr-3 previous-link" 
    href="{% url 'gallery' %}?q={{ current_query }}&before={{ first_picture.public_id }}"
>
    Previous
</a>
<button class="bg-gray-300 hover:bg-gray-500 rounded-b py-2 pl-4 pr-3 previous-button" onclick=previousPicture()>
    <i class="fas fa-angle-double-left"></i>
    Previous Page

</button>

<a 
    class="hidden bg-gray-300 hover:bg-gray-500 rounded-b py-2 pl-4 pr-3 next-link"
    href="{% url 'gallery' %}?q={{ current_query }}&after={{ last_picture.public_id }}"
>
    Next
</a>
<button class="bg-gray-300 hover:bg-gray-500 rounded-b py-2 pl-4 pr-3 next-button" onclick=nextPicture()>
    Next Page
    <i class="fas fa-angle-double-right"></i>
</button>
