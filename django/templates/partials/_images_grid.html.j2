{% if pictures %}
    {% for picture in pictures %}
    <div class="mt-5 px-3">
        <div class="w-picture-card">

            <a href="{% url 'gallery' %}?p={{ picture.public_id }}&q={{ current_full_query }}">
                <div class="h-picture-card bg-white border rounded-lg overflow-hidden shadow link-image">
                    <img class="object-cover" src="{{ picture.photo }}" alt="">
                </div>
            </a>

            <h3 class="text-2xl font-semibold py-2">{{ picture.title }}</h3>

            <div class="card-tags flex flex-row flex-wrap">
                {% for tag in picture.above_tags %}
                <a href="{% url 'search'%}?q={{ tag }}" class="tag bg-gray-300 hover:bg-gray-400 rounded py-1 px-2 text-xs mr-2 font-medium mb-2 text-gray-600 hover:text-black">
                    {{ tag }}
                </a>
                {% endfor %}
                {% if picture.below_tags %}
                {% for tag in picture.below_tags %}
                <a href="{% url 'search'%}?q={{ tag }}" class="tag bg-gray-300 hover:bg-gray-400 rounded py-1 px-2 text-xs mr-2 font-medium mb-2 text-gray-600 hover:text-black collapsed-tag hidden">
                {{ tag }}
                </a>
                {% endfor %}
                <button class="tag bg-gray-300 hover:bg-gray-400 rounded py-1 px-3 text-xs mr-2 mb-2 text-black tag-expander" onclick="expandTags(this)">
                    <i class="fas fa-level-down-alt"></i>
                </button>
                {% endif %}
            </div>

        </div>
    </div>
    {% endfor %}

    {% for placeholder in grid_placeholders %}
    <div class="card-container mt-5 px-3">
        <div class="full-card w-picture-card">
        </div>
    </div>
    {% endfor %}
{% endif %}