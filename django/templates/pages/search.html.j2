{% extends 'base.html.j2' %}

{% load static %}

{% block content %}
    <div class="search-page flex mt-5">
        <div class="search-sidebar w-1/5 mx-3">
            <div class="tags-bar border border-gray-300 rounded px-12 flex flex-col py-3 shadow">
                <div class="border border-gray-300 rounded my-2 pl-2">
                    <input type="text" class="appearance-none" placeholder="Add Tags...">
                    <button class="bg-gray-300 hover:bg-gray-400 px-3 py-2" >
                        <i class="fas fa-plus"></i>
                    </button>
                </div>
                
                <h1 class="text-2xl font-semibold">
                    Searched Tags
                </h1>

                {% if searchedTags %}
                    <div class="flex flex-row flex-wrap w-64">
                    {% for tag in searchedTags %}
                        <a href="/" class="tag bg-gray-300 hover:bg-gray-400 rounded py-1 px-2 text-xs mr-2 font-medium mb-2 text-gray-600 hover:text-black">
                            {{ tag }}
                        </a>
                    {% endfor %}
                    </div>
                {% endif %}
            </div>
            <div class="return-to-first-page-button">
            </div>
        </div>
        
        <div class="border border-blue-200 w-4/5 mx-3">
            <div class="images-grid border border-red-200  max-w-7xl">
                images grid
            </div>
        </div>
        
    </div>
{% endblock %}