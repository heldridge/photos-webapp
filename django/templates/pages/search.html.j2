{% extends 'base.html.j2' %}

{% load static %}

{% block content %}
    <div class="search-page flex justify-center flex-wrap md:flex-no-wrap mt-5 mb-5">
        <div class="search-sidebar md:w-1/5 max-w-xl ml-3 mr-3 md:mr-0">
            <div class="tags-bar border border-gray-300 rounded px-5 flex flex-col py-3 shadow">

                <div class="flex border justify-between border-gray-300 w-4/5 rounded overflow-hidden">
                    <div class="my-2 pl-2">
                        <input type="text" class="appearance-none w-full pr-2" placeholder="Add Tags...">
                        
                        
                    </div>
                    <button class="bg-gray-300 hover:bg-gray-400 active:bg-blue-300 px-3 py-2 add-tags-button" >
                        <i class="fas fa-plus"></i>
                    </button>
                </div>
                
                <h1 class="text-2xl font-semibold pb-3 pt-1">
                    Searched Tags
                </h1>

                {% if searchedTags %}
                    <div class="flex flex-row flex-wrap w-4/5">
                    {% for tag in searchedTags %}
                        <div class="tag bg-gray-300 rounded py-1 px-2 text-xs mr-2 font-medium mb-2 text-gray-600">
                            <a href="/">
                                <i class="fas fa-times pr-1 hover:text-black"></i>
                            </a>
                            {{ tag }}
                        </div>
                        <!--<a href="/" class="tag bg-gray-300 hover:bg-gray-400 rounded py-1 px-2 text-xs mr-2 font-medium mb-2 text-gray-600 hover:text-black">
                            {{ tag }}
                        </a>-->
                    {% endfor %}
                    </div>
                {% endif %}
            </div>
            <div class="return-to-first-page-button">
            </div>
        </div>
        
        <div class="w-4/5 max-w-7xl">
            <div class="flex flex-wrap justify-center" id="cardsHolder">
                {% include "partials/_images_grid.html.j2" with pictures=pictures %}
            </div>

            <div class="flex justify-between my-2 text-lg">
                <a href="/" id="previousButton" class="bg-gray-300 hover:bg-gray-500 rounded py-2 pl-3 pr-4">
                <i class="fas fa-arrow-left pr-2"></i>
                Previous
                </a> 

                <a href="/" id="nextButton" class="bg-gray-300 hover:bg-gray-500 rounded py-2 pl-4 pr-3">
                Next
                <i class="fas fa-arrow-right pl-2"></i>
                </a>
            </div>

        </div>
        
        
    </div>

    <script type="text/javascript" src="{% static 'js/all.js' %}"></script>
{% endblock %}