{% extends 'base.html.j2' %}

{% load static %}

{% block content %}

{% if picture %}

<div class="flex flex-row justify-center md:justify-start px-8 md:px-16 pt-4">
    <div class="md:w-4/6 max-h-screen flex flex-col" id="gallery-image-guide-container">
        <div class="flex md:hidden justify-between" id="gallery-next-prev">
            <a 
                class="hidden bg-gray-300 hover:bg-gray-500 rounded-t py-2 pl-4 pr-3 previous-link" 
                href="{% url 'gallery' %}?q={{ current_query }}&before={{ first_picture.public_id }}"
            >
                Previous
            </a>
            <button class="bg-gray-300 hover:bg-gray-500 rounded-t py-2 pl-4 pr-3 previous-button" onclick=previousPicture()>
                Previous
            </button>

            <a 
                class="hidden bg-gray-300 hover:bg-gray-500 rounded-t py-2 pl-4 pr-3 next-link"
                href="{% url 'gallery' %}?q={{ current_query }}&after={{ last_picture.public_id }}"
            >
                Next
            </a>
            <button class="bg-gray-300 hover:bg-gray-500 rounded-t py-2 pl-4 pr-3 next-button" onclick=nextPicture()>
                Next
            </button>
        </div>
        <div id="gallery-image-container">
        </div>
    </div>
    <div class="w-2/6 hidden md:flex flex-col" id="gallery-sidebar">
        <div> 
            <div class="mx-6 flex justify-between" id="gallery-next-prev">
                <a 
                    class="hidden bg-gray-300 hover:bg-gray-500 rounded-t py-2 pl-4 pr-3 previous-link" 
                    href="{% url 'gallery' %}?q={{ current_query }}&before={{ first_picture.public_id }}"
                >
                    Previous
                </a>
                <button class="bg-gray-300 hover:bg-gray-500 rounded-t py-2 pl-4 pr-3 previous-button" onclick=previousPicture()>
                    Previous
                </button>

                <a 
                    class="hidden bg-gray-300 hover:bg-gray-500 rounded-t py-2 pl-4 pr-3 next-link"
                    href="{% url 'gallery' %}?q={{ current_query }}&after={{ last_picture.public_id }}"
                >
                    Next
                </a>
                <button class="bg-gray-300 hover:bg-gray-500 rounded-t py-2 pl-4 pr-3 next-button" onclick=nextPicture()>
                    Next
                </button>
            </div>
            <div class="border-2 rounded-b border-gray-300 mx-6 pb-5 px-1 flex flex-row flex-wrap justify-around" id="gallery-next-images">
            </div>
        </div>
    </div>
</div>

{% endif %}
<script type="text/javascript">
    let allPicturesOutside = {{ all_pictures| safe }};
    let originalPictureIndexOutside = {{ original_picture_index }};
    let nextPageLinkOutside = "{% url 'gallery' %}?q={{ current_query }}&after={{ last_picture.public_id }}";
    let previousPageLinkOutside = "{% url 'gallery' %}?q={{ current_query }}&before={{ first_picture.public_id }}"

    {% if render_next_button %}
    let renderNextButtonOutside = true;
    {% else %}
    let renderNextButtonOutside = false;
    {% endif %}

    {% if render_previous_button %}
    let renderPreviousButtonOutside = true
    {% else %}
    let renderPreviousButtonOutside = false;
    {% endif %}
</script>
<script type="text/javascript" src="{% static 'js/gallery.js' %}"></script>

{% endblock %}