{% extends 'base.html.j2' %}

{% load static %}

{% block content %}

{% if picture %}
<div class="hidden absolute z-10 min-h-full bg-black-op-90 modal flex flex-col" id="modal-image" onclick="hideModalImage()">
    <button class="text-white text-5xl self-end pr-4 pt-2" onclick="hideModalImage()">
        <i class="fas fa-times"></i>
    </button>
    <div class="px-8 pt-1 pb-10 pointer-events-none" id="modal-image-container"></div>
</div>


<div class="flex flex-col md:flex-row justify-center md:justify-start px-8 pt-4 pb-20">
    <div class="md:w-9/12 flex justify-between border-red-300" id="gallery-image-guide-container">
        <div class="flex flex-col items-center w-full">
            <div class="md:flex md:justify-between md:items-center md:w-full">

                <div class="hidden md:inline-block">
                    <button 
                        class="border flex flex-col justify-center text-lg bg-gray-300 hover:bg-gray-500 px-6 rounded h-16 mr-1 ml-2 previous-button"
                        onclick="previousPicture()"
                    >
                        <i class="fas fa-chevron-left"></i>
                    </button>

                    <a 
                        href="{% url 'gallery' %}?q={{ current_query }}&before={{ first_picture.public_id }}"
                        {% if render_previous_button %}
                        class="border hidden flex flex-col justify-center text-lg bg-gray-300 hover:bg-gray-500 px-6 rounded h-16 mr-1 ml-2 previous-link"
                        {% else %}
                        class="border hidden flex flex-col justify-center text-lg bg-gray-300 hover:bg-gray-500 px-6 rounded h-16 mr-1 ml-2 previous-link opacity-50 pointer-events-none"
                        {% endif %}                    
                        >
                        <i class="fas fa-chevron-left"></i>
                    </a>
                </div>

                <button id="gallery-image-container" class="flex items-center" onclick="showModalImage()">
                </button>


                <div class="hidden md:inline-block">
                    <button 
                        class="border flex flex-col justify-center text-lg bg-gray-300 hover:bg-gray-500 px-6 rounded h-16 ml-1 mr-2 next-button"
                        onclick="nextPicture()"
                    >
                        <i class="fas fa-chevron-right"></i>
                    </button>
                
                

                    <a 
                        href="{% url 'gallery' %}?q={{ current_query }}&after={{ last_picture.public_id }}"
                        {% if render_next_button %}
                        class="border hidden flex flex-col justify-center text-lg bg-gray-300 hover:bg-gray-500 px-6 rounded h-16 mr-2 ml-1 next-link"
                        {% else %}
                        class="border hidden flex flex-col justify-center text-lg bg-gray-300 hover:bg-gray-500 px-6 rounded h-16 mr-2 ml-1 next-link opacity-50 pointer-events-none"
                        {% endif %}                    
                        >
                        <i class="fas fa-chevron-right"></i>
                    </a>
                </div>

                <div class="block md:hidden w-full">
                    {% include "partials/_gallery_nav.html.j2" %}
                </div>
            </div>
            
            <div id="images-info" class="mt-6 md:mt-0">
                {% for picture in pictures %}
                <div class="flex flex-col items-center hidden">
                    <div class="mb-1 md:mb-0">
                        <a 
                            href="{% url 'picture' picture.public_id %}"
                            class="text-3xl md:text-5xl font-semibold hover:opacity-50 inline-block" id="title-{{ picture.public_id }}"
                        >
                            {{ picture.title }}
                        </a>
                    </div>
                    
                    <div class="flex flex-wrap">
                        {% for tag in picture.above_tags %}
                        <a href="{% url 'search'%}?q={{ tag }}" class="tag bg-gray-300 hover:bg-gray-400 rounded py-1 md:py-2 px-2 md:px-3 mr-3 font-medium mb-3 text-gray-600 hover:text-black text-xs md:text-md">
                            {{ tag }}
                        </a>
                        {% endfor %}
                        {% for tag in picture.below_tags %}
                        <a href="{% url 'search'%}?q={{ tag }}" class="tag bg-gray-300 hover:bg-gray-400 rounded py-1 md:py-2 px-2 md:px-3 mr-3 font-medium mb-3 text-gray-600 hover:text-black text-xs md:text-md">
                            {{ tag }}
                        </a>
                        {% endfor %}
                    </div>
                </div>
                
                {% endfor %}
            </div>
        </div>

        
        
    </div>
    <div class="md:w-3/12 flex flex-col pt-4" id="gallery-sidebar">
        <div> 
            <!--
            <div class="mx-6 flex justify-between">
                {% include "partials/_gallery_next_prev.html.j2" %}
            </div>
            -->

            <div class="flex md:hidden justify-center mb-6">
                <a 
                    href="{% url 'search' %}?q={{ current_full_query }}"
                    class="rounded bg-gray-300 hover:bg-gray-500 mx-6 py-2 pl-3 pr-3"
                >
                    <i class="fas fa-undo pr-1"></i>
                    Back to Search
                </a>
            </div>

            <div class="hidden md:flex justify-between mx-6">
                <a 
                    href="{% url 'gallery' %}?q={{ current_query }}&before={{ first_picture.public_id }}"

                    {% if render_previous_button %}
                    class="bg-gray-300 hover:bg-gray-500 shadow md:shadow-none rounded-b md:rounded-none md:rounded-t h-10 md:h-8 lg:h-10 xl:h-12 text-lg md:text-md lg:text-xl px-5 md:px-2 lg:px-3 xl:px-4 flex items-center justify-center"
                    {% else %}
                    class="bg-gray-300 hover:bg-gray-500 shadow md:shadow-none rounded-b md:rounded-none md:rounded-t h-10 md:h-8 lg:h-10 xl:h-12 text-lg md:text-md lg:text-xl px-5 md:px-2 lg:px-3 xl:px-4 flex items-center justify-center opacity-50 pointer-events-none"
                    {% endif %}

                    title="Previous Page"
                >
                    <i class="fas fa-angle-double-left"></i>
                </a>

                <a 
                    href="{% url 'gallery' %}?q={{ current_query }}&after={{ last_picture.public_id }}"

                    {% if render_next_button %}
                    class="bg-gray-300 hover:bg-gray-500 shadow md:shadow-none rounded-b md:rounded-none md:rounded-t h-10 md:h-8 lg:h-10 xl:h-12 text-lg md:text-md lg:text-xl px-5 md:px-2 lg:px-3 xl:px-4 flex items-center justify-center"
                    {% else %}
                    class="bg-gray-300 hover:bg-gray-500 shadow md:shadow-none rounded-b md:rounded-none md:rounded-t h-10 md:h-8 lg:h-10 xl:h-12 text-lg md:text-md lg:text-xl px-5 md:px-2 lg:px-3 xl:px-4 flex items-center justify-center opacity-50 pointer-events-none"
                    {% endif %}
                    title="Next Page"
                >
                    <i class="fas fa-angle-double-right"></i>
                </a>
            </div>

            <div class="border-2 rounded-b border-gray-300 mx-6 pb-5 px-1 flex flex-col items-center">
                <div class="flex flex-row flex-wrap justify-around" id="gallery-next-images">
                    {% for picture in pictures %}
                    <button 
                        class="h-0 pb-1-3 w-under-1-3 rounded overflow-hidden mt-5 next-picture"
                        onclick="setImage({{ forloop.counter0 }}, 'push')"
                    >
                        <img src="{{ picture.photo }}" alt="TODO" class="object-cover">
                    </button>
                    {% endfor %}
                    {% for placeholder in grid_placeholders %}
                    <div class="w-under-1-3"></div>
                    {% endfor %}
                </div>
            </div>


            <div class="hidden md:flex justify-center mt-4">
                <a 
                    href="{% url 'search' %}?q={{ current_full_query }}"
                    class="rounded bg-gray-300 hover:bg-gray-500 mx-6 py-2 pl-3 pr-3 lg:text-xl flex"
                >
                    <div class="hidden lg:inline-block">
                        <i class="hidden fas fa-undo pr-2"></i>
                    </div>
                    
                    Back to Search
                </a>
            </div>
            
        </div>
    </div>
</div>

{% endif %}
<script type="text/javascript">
    let allPicturesOutside = {{ all_pictures| safe }};
    let originalPictureIndexOutside = {{ original_picture_index }};
    let nextPageLinkOutside = "{% url 'gallery' %}?q={{ current_query }}&after={{ last_picture.public_id }}";
    let previousPageLinkOutside = "{% url 'gallery' %}?q={{ current_query }}&before={{ first_picture.public_id }}"

    {% if render_next_button %}
    let renderNextButtonOutside = true;
    {% else %}
    let renderNextButtonOutside = false;
    {% endif %}

    {% if render_previous_button %}
    let renderPreviousButtonOutside = true
    {% else %}
    let renderPreviousButtonOutside = false;
    {% endif %}
</script>
<script type="text/javascript" src="{% static 'js/gallery.js' %}"></script>

{% endblock %}