{% extends 'base-tailwind.html.j2' %}

{% load static %}

{% block content %}

<nav class="flex items-center bg-white-500 border rounded shadow">
    
        <a href="/" class="py-5 pr-6 pl-6 border-r border-gray-300 hover:bg-gray-100 text-xl">
            Home
        </a>

        <div class="py-2 pr-6 pl-6 border-r border-gray-300">
          <div class="border border-gray-300 rounded px-3 flex items-center text-xl" id="navSearchBorder">
            <input 
              class="focus:outline-none focus:placeholder-gray-600 appearance-none py-3" 
              type="text" placeholder="Search Tags..." 
              onfocus="setNavSearchBorderBlue()" onfocusout="setNavSearchBorderGray()"
            >
            <i class="fas fa-search opacity-50"></i>
          </div> 
        </div>
</nav>

<script type="text/javascript" src="{% static 'js/navbarControl.js' %}"></script>

{% endblock %}
