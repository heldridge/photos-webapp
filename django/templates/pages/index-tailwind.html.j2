{% extends 'base-tailwind.html.j2' %}

{% load static %}

{% block content %}

<nav class="flex items-center bg-white-500 border rounded shadow">
    
  <a href="/" class="py-5 pr-6 pl-6 border-r border-gray-300 hover:bg-gray-100 text-xl">
      Home
  </a>

  <div class="py-2 pr-6 pl-6 border-r border-gray-300">
    <div 
      class="cursor-text border border-gray-300 rounded px-4 flex items-center text-xl" 
      id="navSearchBorder"
      onclick="focusNavSearch()"
    >
      <input 
        id="navSearch"
        class="focus:outline-none focus:placeholder-gray-600 appearance-none py-3" 
        type="text" placeholder="Search Tags..." 
        onfocus="navSearchFocus()" onfocusout="navSearchFocusOut()"
      >
      <i class="fas fa-search opacity-50 pl-3" id="navSearchIcon"></i>
    </div> 
  </div>

</nav>

<div class="flex items-center flex-col">
  <h1 class="text-5xl font-semibold py-4">Latest Uploads</h1>

  <div class="flex flex-wrap w-4/5 max-w-7xl justify-center" id="cardsHolder">
    {% if pictures %}
      {% for picture in pictures %}
        <div class="mt-5 px-3">
          <div class="w-picture-card">

            <a href="/">
              <div class="h-picture-card bg-white border rounded-lg overflow-hidden shadow link-image">
                <img class="object-cover" src="{{ picture.original.photo.url }}" alt="">
              </div>
            </a>

            <h3 class="text-2xl font-semibold py-2">{{ picture.original.title }}</h3>

            <div class="card-tags flex flex-row flex-wrap">
              {% for tag in picture.above_tags %}
                <a href="/" class="tag bg-gray-300 hover:bg-gray-400 rounded py-1 px-2 text-xs mr-2 font-medium mb-2 text-gray-600 hover:text-black">
                  {{ tag }}
                </a>
              {% endfor %}
              {% if picture.below_tags %}
                {% for tag in picture.below_tags %}
                  <a href="/" class="tag bg-gray-300 hover:bg-gray-400 rounded py-1 px-2 text-xs mr-2 font-medium mb-2 text-gray-600 hover:text-black collapsed-tag hidden">
                    {{ tag }}
                  </a>
                {% endfor %}
                <button class="tag bg-gray-300 hover:bg-gray-400 rounded py-1 px-3 text-xs mr-2 mb-2 text-black tag-expander" onclick="expandTags(this)">
                  <i class="fas fa-level-down-alt"></i>
                </button>
              {% endif %}
            </div>

          </div>
        </div>
      {% endfor %}

      {% for placeholder in grid_placeholders %}
        <div class="card-container mt-5 px-3">
          <div class="full-card w-picture-card">
          </div>
        </div>
      {% endfor %}
    {% endif %}
  </div>


  <div class="flex justify-between w-4/5 max-w-7xl my-3 text-lg">
    <a href="/" id="previousButton" class="bg-gray-300 hover:bg-gray-500 rounded py-2 pl-3 pr-4">
      <i class="fas fa-arrow-left pr-2"></i>
      Previous
    </a> 

    <a href="/" id="nextButton" class="bg-gray-300 hover:bg-gray-500 rounded py-2 pl-4 pr-3">
      Next
      <i class="fas fa-arrow-right pl-2"></i>
    </a>
  </div>
</div>





<script type="text/javascript" src="{% static 'js/navbarControl.js' %}"></script>
<script type="text/javascript" src="{% static 'js/imagesGridFooterControl.js' %}"></script>
<script type="text/javascript" src="{% static 'js/tagsController.js' %}"></script>

{% endblock %}
