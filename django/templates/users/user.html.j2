{% extends 'base.html.j2' %}

{% load static %}

{% block content %}

<div class="flex justify-center w-full">
    <div class="flex flex-col w-4/5 max-w-7xl items-center">
        <h1 class="text-5xl font-semibold py-4 opacity-high-emphasis mt-4">
            {{ display_name }}'{% if display_name.0 != 's' %}s{% endif %} uploads
