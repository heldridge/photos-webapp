{% extends 'base.html.j2' %}

{% load static %}

{% block content %}

{# <h1 class="text-5xl font-semibold py-4 opacity-high-emphasis">Login</h1> #}
<div class="flex flex-col items-center">

    {% if messages %}
        <ul>
            {% for message in messages %}
            <li>{{ message }}</li>
            {% endfor %}
        </ul>
    {% endif %}


    <form method="post" class="inline-block p-10 mt-10 rounded border-default border-2 shadow-lg w-96">
        {% csrf_token %}       
        {% if form.non_field_errors %}
            <div class='mb-3 text-error'>
                <ul>
                    {% for error in form.non_field_errors %}
                    <li> {{ error| escape }}</li>
                    {% endfor %}
                </ul>
            </div>
        {% endif %}
        <div class="flex flex-col items-center">
            {% for field in form %}

            {% if forloop.first %}
            <div class="flex flex-col w-56">
            {% else %}
            <div class="flex flex-col w-56 pt-5">
            {% endif %}
                <span class="text-lg opacity-high-emphasis">{{ field.label_tag }}</span>
                {{ field }}
                <div class="text-error pt-1">
                    <ul>
                        {% for error in field.errors %}
                        {% if forloop.first %}
                        <li>{{ error| escape }}</li>
                        {% else %}
                        <li class="pt-2">{{ error| escape }}</li>
                        {% endif %}
                        {% endfor %}
                    </ul>
                </div>
            </div>
            {% endfor %}
            
            
            
            
            <button type="submit" class="text-lg rounded mt-5 py-2 px-4 bg-primary hover:bg-primary-hover text-black">Register</button>
        </div> 
        
    </form>
</div>


<script type="text/javascript" src="{% static 'js/register.js' %}"></script>
{% endblock %}