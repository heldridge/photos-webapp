{% extends 'base.html.j2' %}

{% load static %}

{% block content %}

<div class="flex justify-center w-full pt-10">

    <div class="flex flex-col w-4/5 max-w-7xl items-center">   
        {% if user.is_authenticated %}
        <div class="flex flex-col sm:flex-row items-center sm:justify-between w-4/5">
            <p class="opacity-high-emphasis text-4xl">
                Hi {{ user.display_name }}!
            </p>

            <div class="flex justify-around mt-2 sm:mt-0">
                <a href="{% url 'settings' %}" class="bg-basic hover:bg-basic-hover rounded text-black px-3 py-1 sm:py-2 text-black opacity-high-emphasis text-lg flex items-center mr-8">
                    Settings
                </a>
                <a href="{% url 'logout' %}" class="border-basic border-2 bg-alternate hover:bg-basic rounded text-black px-3 py-1 sm:py-2 text-primary hover:text-black text-lg flex items-center outline-button">
                    <span class='opacity-high-emphasis'> Logout<span>
                </a>
            </div>
        </div>
        {% else %}
        <p class="opacity-high-emphasis text-4xl">
            You are not logged in
        </p>
        {% endif %}


        <a href="{% url 'users' user_public_id=user.public_id %}" class="bg-basic hover:bg-basic-hover rounded text-black px-3 py-1 sm:py-2 text-black opacity-high-emphasis text-lg flex items-center mt-4">
            View Public Profile
        </a>


        <h1 class="text-5xl font-semibold py-4 opacity-high-emphasis mt-4">Favorites</h1>

        <ul class="flex flex-wrap max-w-7xl justify-center" id="cardsHolder">
            {% include "partials/_images_grid.html.j2" with pictures=pictures %}
        </ul>
        <div class="flex justify-center w-4/5 max-w-7xl mt-8 text-lg mb-20">
            {% if more_left and pictures|length > 0 %}
            {% with last_picture=pictures|last %}
            <a href="{% url 'search' %}?after={{ last_picture.public_id }}&favorites=true" class="rounded shadow py-2 pl-3 pr-4 bg-basic hover:bg-basic-hover text-black">
                Continue Browsing Favorites
                <i class="fas fa-arrow-right pl-2"></i>
            </a>
            {% endwith %}
            {% endif %}
        </div>
        {% if pictures|length == 0 %}
        <p class='text-xl md:text-3xl opacity-medium-emphasis'>You have no favorites! Press the heart button below an image to add one.</p>
        {% else %}
        {% endif %}
    </div>
</div>

<script type="text/javascript" src="{% static 'js/basic_grid.js' %}"></script>
{% endblock %}