{% extends 'base.html.j2' %} {% load static %} {% block content %}

<div class="flex items-center flex-col">
    <h1 class="text-5xl font-semibold py-4 opacity-high-emphasis">
        Password Reset
    </h1>

    <form method="POST" class='flex flex-col items-center'>
        {% csrf_token %} {{ form.as_p }}
        <input type="submit" class="text-lg rounded mt-5 py-2 px-4 bg-primary hover:bg-primary-hover text-black" value="Send Reset Link" />
    </form>
</div>

<script type="text/javascript" src="{% static 'js/basic.js' %}"></script>
{% endblock %}
