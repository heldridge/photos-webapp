{% extends 'base.html.j2' %}

{% load static %}

{% block content %}

<div class="flex flex-col items-center">
    <form method="post" class="inline-block p-10 mt-10 rounded border-default border-2 shadow-lg w-77">
        {% csrf_token %}       
        {% if form.non_field_errors %}
            <div class='mb-3 text-error'>
                <ul>
                {% for error in form.non_field_errors %}
                    <li> {{ error| escape }}</li>
                {% endfor %}
                </ul>
            </div>
        {% endif %}
        <div class="flex flex-col items-center">
            <div class="flex flex-col">
                <span class="text-lg opacity-high-emphasis">{{ form.username.label_tag }}</span>
                {{ form.username }}
            </div>
            <div class="flex flex-col pt-5">
                <span class="text-lg opacity-high-emphasis">{{ form.password.label_tag }}</span>
                {{ form.password }}
            </div>
            
            <button type="submit" class="text-lg rounded mt-5 py-2 px-4 bg-primary hover:bg-primary-hover text-black">Login</button>
        </div> 
    </form>

    <a href="{% url 'password_reset_request' %}" class='opacity-medium-emphasis hover:opacity-50 mt-4'>Forgot your password?</a>
</div>

<script type="text/javascript" src="{% static 'js/login.js' %}"></script>
{% endblock %}